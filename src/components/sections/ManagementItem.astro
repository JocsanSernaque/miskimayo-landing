---
interface Props {
  class?: string;
  title: string;
}
const { title } = Astro.props;
---

<article
  class={`${Astro.props.class} relative w-full rounded-xl backdrop-blur-md border border-black/10 shadow-inner shadow-white/20 text-white`}
>
<div class="absolute z-10 bottom-0 top-0 w-full h-full bg-gradient-to-b from-transparent from-40% via-black/70 to-black/80">

</div>
  <slot name="image"></slot>
  <div class="relative select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full">
    <h2 class="text-3xl font-bold text-balance">{title}</h2>
  </div>
</article>
